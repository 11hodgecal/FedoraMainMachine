#! /bin/sh

#Clean lingering programs when reloaded
"$HOME/.config/bspwm/clean" &

#Start polybar first
bash ~/.config/polybar/launch.sh &
feh --bg-fill ~/Pictures/background.jpg &

# Variable Defines
color0=#3B4252
color4=#D8DEE9

# Make sure sxhkd is always running
while :; do
    if pgrep -x sxhkd > /dev/null; then
        true
    else
        sxhkd &
    fi
    sleep 5
done &

#Fix Mouse curoor on startup 
xsetroot -cursor_name left_ptr

#Set Keyboard Layout
setxkbmap -layout uk

#Monitor Config
if [[ $(xrandr -q | grep "HDMI-A-0 connected") ]]; then
	xrandr --output HDMI-A-0 --mode 1920x1080 --rotate normal --output HDMI-A-0 --mode 1920x1080 --rotate normal --right-of DisplayPort-1
	bspc monitor DisplayPort-1 -d 1 2 3 4 5 6
	bspc monitor HDMI-A-0 -d 7 8
fi

#if i use it on a different computer the setup will work fine
if [[ $(xrandr -q | grep "HDMI-A-0 disconnected") ]]; then
        bspc monitor -d 1 2 3 4 5 6 7 8
fi

#BSPWM Config
bspc config border_width        0
bspc config top_padding         50
bspc config right_padding       5
bspc config left_padding        5
bspc config bottom_padding      5
bspc config window_gap          5
bspc config top_monocle_padding  0
bspc config right_monocle_padding 0
bspc config left_monocle_padding 0
bspc config bottom_monocle_padding 0

bspc config focused_border_color "$color0"
bspc config normal_border_color  "$color0"
bspc config active_border_color  "$color0"
bspc config presel_feedback_color "$color4"
bspc config split_ratio          0.50
bspc config borderless_monocle   true  
bspc config gapless_monocle      false
bspc config focus_follows_pointer true
bspc config external_rules_command "$HOME/.config/bspwm/external_rules.sh"
bspc config merge_overlapping_monitors true

#Application Rules
# Use command "xprop | grep WM_CLASS" to find the name of the application to be entered below
# After the command click on the application window and the name will be generated after the command and use the name generated by this command.
# Search "Bare-bones window manger by Angad Sharma" on dev.to for more
bspc rule -a brave-browser desktop='^7' follow=on
bspc rule -a Gimp desktop='^8' follow=on
bspc rule -a steam desktop='^2' state=floating follow=off
bspc rule -a variety state=floating
bspc rule -a lutris desktop='^2'
bspc rule -a mplayer2 state=floating
bspc rule -a Kupfer.py focus=on
bspc rule -a Screenkey manage=off
bspc rule -a virt-manager desktop='^9'
bspc rule -a code desktop='^4'

#Auto-Start
urxvtc &
lxpolkit &
picom --config "$HOME/.config/bspwm/picom.conf" &
nitrogen --restore &
#/usr/bin/synergys -f -d ERROR -n studio-pc -c /etc/synergy.conf -a 192.168.69.10:24800 --log ~/.local/log/synergy.log &
/bin/Discord --start-minimized &
synology-drive &

# Move to Desktop 1
bspc desktop -f 1
